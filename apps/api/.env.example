# Application settings
DEBUG=false

# Database
# Local development:
DATABASE_URL=postgresql://user:password@localhost:5432/togenuki
DATABASE_PASSWORD=password
# Cloud Run with Cloud SQL (use connection name):
# DATABASE_URL=postgresql+asyncpg://user:password@/togenuki?host=/cloudsql/PROJECT:REGION:INSTANCE
# DATABASE_PASSWORD=password

# Firebase Authentication
FIREBASE_CREDENTIALS_PATH=secrets/firebase-service-account.json

# Gmail OAuth
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/gmail/callback

# Google Cloud (Phase 4)
GOOGLE_CLOUD_PROJECT=your-project-id
GEMINI_API_KEY=your-api-key
GCS_BUCKET_NAME=togenuki-audio

# Cloud Scheduler
SCHEDULER_SECRET=your-scheduler-secret
